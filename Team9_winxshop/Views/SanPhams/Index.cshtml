@model IEnumerable<Team9_winxshop.Models.SanPham>

@{
    ViewBag.Title = "Index";
}

<h2>Danh sách sản phẩm</h2>

<p>
    <a href="@Url.Action("Create")">Thêm sản phẩm</a>
</p>
<table class="table">
    <tr>
        <th>
            Tên sản phẩm
        </th>
        <th>
            Size
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Màu
        </th>
        <th>
            Hình ảnh
        </th>
        <th>
            Loại sản phẩm
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            <a href="@Url.Action("Details", new { id = item.MaSP })" target="_blank"></a>@item.TenSP
        </td>
        <td>
            @item.Size
        </td>
        <td>
            @item.SoLuong
        </td>
        <td>
            @item.DonGia.ToString("N")@("đ")
        </td>
        <td>
            @item.Mau
        </td>
        <td>
            <img src="@Url.Content(item.HinhAnh)" style="width: 70px; height: 80px"/>
        </td>
        <td>
            @item.LoaiSanPham.TenLoaiSP
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id = item.MaSP })">
                <i class="fa fa-edit"></i>
            </a> |
            <a href="@Url.Action("Delete", new { id = item.MaSP })">
                <i class="fa fa-trash"></i>
            </a>
        </td>
    </tr>
}

</table>
<a href="@Url.Action("Index2", "SanPhams")">Về trang chủ</a>
