                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </div>
                        <div class="payment-pic">
                            <img src="@Url.Content("~/assets/img/payment-method.png")" alt="">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</body>
