@model Team9_winxshop.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}



<div class="breacrumb-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-text">
                    <a href="@Url.Action("Login", "Account")"><i class="fa fa-sign-in"></i> Đăng nhập</a>
                    <span>Đăng ký</span>
                </div>
            </div>
        </div>
    </div>
</div>
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="register-login-section spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 offset-lg-3">
                    <div class="register-form">
                        @Html.AntiForgeryToken()
                        <h2>Đăng ký</h2>
                        <hr />
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <form action="#">
                            <div class="group-input">
                                <label for="username">Email *</label>
                                <div id="username">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="group-input">
                                <label for="pass">Mật khẩu *</label>
                                <div id="pass">
                                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="group-input">
                                <label for="con-pass">Nhập lại mật khẩu *</label>
                                <div id="con-pass">
                                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                </div>
                            </div>
                            <button type="submit" class="site-btn register-btn" style="border-radius: 5px; margin-top: 20px; padding-left: 43.5%; padding-right: 43.5%">Đăng ký</button>
                        </form>
                        <div class="switch-login">
                            <a href="@Url.Action("Login", "Account")" class="or-login">Đăng nhập</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
